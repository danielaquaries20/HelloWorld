<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HelloWorld" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.HelloWorld" parent="Base.Theme.HelloWorld" />

    <style name="Toolbar">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ButtonLinear">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="ButtonRelative">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="TextTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ImageToolbar">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="ButtonBlue" parent="ButtonLinear">
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="ButtonGreen" parent="ButtonLinear">
        <item name="android:background">@color/light_green</item>
    </style>

    <style name="BackgroundApp">
        <item name="android:background">@color/light_app_background</item>
    </style>

    <style name="BackgroundToolbar">
        <item name="android:paddingTop">28dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="IconToolbar">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="ButtonNormal">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Button</item>
    </style>

    <style name="ButtonOne" parent="ButtonNormal">
        <item name="android:background">@drawable/custom_background_1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonTwo" parent="ButtonNormal">
        <item name="android:background">@color/light_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonThree" parent="ButtonNormal">
        <item name="android:background">@color/light_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonFour" parent="ButtonNormal">
        <item name="android:background">@color/light_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonFive" parent="ButtonNormal">
        <item name="android:background">@color/light_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonSix" parent="ButtonNormal">
        <item name="android:background">@color/light_yellow</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextNormal">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SwitchNormal">
        <item name="android:thumbTint">@color/black</item>
    </style>

</resources>